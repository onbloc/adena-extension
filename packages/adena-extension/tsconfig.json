{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "downlevelIteration": true,
    "lib": ["dom", "es5", "es6"],
    "baseUrl": "./",
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@ui/*": ["src/ui/*"],
      "@pages/*": ["src/pages/*"],
      "@router/*": ["src/router/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@states/*": ["src/states/*"],
      "@common/*": ["src/common/*"],
      "@inject/*": ["src/inject/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["./src/**/*", "custom.d.ts"]
}
